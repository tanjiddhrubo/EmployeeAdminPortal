@model EmployeeAdminClient.Models.LoginViewModel
@{
    ViewData["Title"] = "Employee Admin Login";
    Layout = "_Layout"; // Ensures the view uses your shared layout template
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow p-4 mt-5">
            <h3 class="card-title text-center">Employee Admin Login</h3>
            <hr />

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-controller="Auth" asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label">Username / Email</label>
                    <input asp-for="Username" class="form-control" placeholder="Enter username or email address" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Log In</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <a asp-controller="Auth" asp-action="Register">Need an account? Register Here</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        // Enables client-side validation using unobtrusive jQuery validation scripts
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}